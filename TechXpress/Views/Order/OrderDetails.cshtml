@{
    ViewData["Title"] = "Order Details";
}

<div class="bg-white py-6 px-6 lg:px-20 text-sm text-gray-800">
    <!-- Header -->
    <div class="flex justify-between items-center mb-6">
        <a asp-controller="Order" asp-action="OrderHistory" class="flex items-center gap-2 text-sm font-semibold text-gray-700 cursor-pointer">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            <span>Order Details</span>
        </a>
    </div>

    <!-- Product Section -->
    <div class="border-b pb-4 mb-6">
        <h2 class="text-lg font-semibold">Product <span class="text-gray-400">(02)</span></h2>
    </div>

    <!-- Table Header -->
    <div class="grid grid-cols-6 text-xs uppercase text-gray-500 border-b pb-2 font-medium">
        <div class="col-span-3">Products</div>
        <div class="col-span-1 text-center">Price</div>
        <div class="col-span-1 text-center">Quantity</div>
        <div class="col-span-1 text-center">Total</div>
    </div>

    <!-- Product Row 1 -->
    <div class="grid grid-cols-6 items-center py-4 border-b text-sm">
        <div class="col-span-3 flex items-center gap-4">
            <img src="https://via.placeholder.com/60" class="w-14 h-14 object-cover rounded" />
            <div>
                <div class="text-xs text-blue-600 font-semibold uppercase">Smartphone</div>
                <div class="text-gray-800 font-medium line-clamp-2">Google Pixel 6 Pro - 5G Android Phone - Unlocked Smartphone with Advanced Pixel C...</div>
            </div>
        </div>
        <div class="col-span-1 text-center font-medium">$899</div>
        <div class="col-span-1 text-center">x1</div>
        <div class="col-span-1 text-center font-bold">$899</div>
    </div>

    <!-- Product Row 2 -->
    <div class="grid grid-cols-6 items-center py-4 border-b text-sm">
        <div class="col-span-3 flex items-center gap-4">
            <img src="https://via.placeholder.com/60" class="w-14 h-14 object-cover rounded" />
            <div>
                <div class="text-xs text-blue-600 font-semibold uppercase">Accessories</div>
                <div class="text-gray-800 font-medium line-clamp-2">Tech21 Evo Clear for Google Pixel 6 Pro – Crystal Clear Phone Case with 12ft Multi-Dr...</div>
            </div>
        </div>
        <div class="col-span-1 text-center font-medium">$39</div>
        <div class="col-span-1 text-center">x1</div>
        <div class="col-span-1 text-center font-bold">$39</div>
    </div>

    <!-- Address Section -->
    <div class="mt-8 text-md">

        <!-- Shipping -->
        <div>
            <h3 class="font-semibold mb-2">Shipping Address</h3>
            <p class="font-medium mb-2">Kevin Gilbert</p>
            <p class="text-gray-500">East Tejturi Bazar, Word No. 04, Road No. 13/x, House no. 1320/C, Flat No. 5D, Dhaka - 1200, Bangladesh</p>
            <p class="my-2">Phone Number: <span class="text-gray-500">+1-202-555-0118</span></p>
            <p>Email: <span class="text-gray-500">kevin.gilbert@gmail.com</span></p>
        </div>
    </div>
</div>

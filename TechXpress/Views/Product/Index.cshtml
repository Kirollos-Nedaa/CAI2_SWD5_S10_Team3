@model ProductViewModel

@{
    ViewData["Title"] = "Index";
	var products = ViewBag.Products as List<Product>;
	var categories = ViewBag.Categories as List<Category>;
	var brands = ViewBag.Brands as List<Brand>;
	
}

<div class="max-w-[1400px] mx-auto px-4 py-12">
    <div class="flex flex-col lg:flex-row gap-8">

        <!-- Sidebar Filters -->
        <aside class="w-full lg:w-[16rem] space-y-6">
            <div class="space-y-4" id="filterAccordion">
                <!-- Brand Filter -->
                <div>
                    <button class="w-full flex justify-between items-center text-left text-lg font-semibold mb-2" data-toggle="brand">
                        Brand
                        <svg class="w-4 h-4 transform transition-transform" data-icon="brand" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                            <path d="M19 9l-7 7-7-7" />
                        </svg>
                    </button>
                    <div id="brand" class="overflow-hidden transition-all duration-300 h-0">
                        <div class="space-y-2 text-sm pl-1 py-2">
                            @foreach (var item in brands)
                            {
                                <div><input type="checkbox" class="mr-2">@item.Name</div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Category Filter -->
                <div>
                    <button class="w-full flex justify-between items-center text-left text-lg font-semibold mb-2" data-toggle="category">
                        Category
                        <svg class="w-4 h-4 transform transition-transform" data-icon="category" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                            <path d="M19 9l-7 7-7-7" />
                        </svg>
                    </button>
                    <div id="category" class="overflow-hidden transition-all duration-300 h-0">
                        <div class="space-y-2 text-sm pl-1 py-2">
                            @foreach (var item in categories)
                            {
                                <div><input type="checkbox" class="mr-2">@item.Name</div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Price Filter -->
                <div>
                    <button class="w-full flex justify-between items-center text-left text-lg font-semibold mb-2" data-toggle="price">
                        Price
                        <svg class="w-4 h-4 transform transition-transform" data-icon="price" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                            <path d="M19 9l-7 7-7-7" />
                        </svg>
                    </button>
                    <div id="price" class="overflow-hidden transition-all duration-300 h-0">
                        <div class="pl-1 py-2">
                            <span class="text-sm text-gray-700">Selected: $<span id="priceValue">1000</span></span>
                            <input type="range" id="priceSlider" min="0" max="10000" value="500" class="w-full mt-2 accent-black">
                        </div>
                    </div>
                </div>
            </div>

            <!-- Apply & Clear Buttons -->
            <div class="pt-4 border-t space-y-3">
                <button id="applyFilters" class="w-full bg-black text-white py-2 rounded hover:invert transition-all">
                    Apply
                </button>
                <button id="clearFilters" class="w-full border border-black text-black py-2 rounded hover:bg-black hover:text-white transition-all">
                    Clear
                </button>
            </div>
        </aside>

        <!-- Main Content -->
        <div class="w-full lg:w-3/4">
            <div class="flex items-center justify-between mb-6">
                <h2 class="text-lg font-medium">Selected Products: <span class="font-semibold">@products.Count()</span></h2>
            </div>

            <!-- Product Grid -->
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
                @foreach (var product in products)
                {
                    var pngPath = $"/images/products/{product.ImageUrl}";

                    <a href="@Url.Action("Details", "Product", new { id = product.Product_Id })" class="bg-[#F6F6F6] rounded-lg overflow-hidden relative block">
                        <div class="absolute top-5 right-5">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-8 hover:fill-[#FF0000] hover:stroke-none transition-all">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
                            </svg>
                        </div>
                        <div class="p-8">
                            <img src="@pngPath" alt="@product.Name" class="w-full h-48 object-contain rounded-lg">
                        </div>
                        <div class="px-4 pb-4">
                            <h3 class="text-xl text-center font-normal mb-5">@product.Name</h3>
                            <div class="flex items-center justify-center">
                                <span class="text-3xl font-semibold">$@product.Price</span>
                            </div>
                            <div class="flex justify-center mt-5">
                                <button class="w-[14rem] bg-black text-white py-2 rounded-md hover:invert transition-all">
                                    Buy Now
                                </button>

                                <form asp-controller="Cart" asp-action="AddToCart" method="post">
                                    <input type="hidden" name="productId" value="@product.Product_Id">
                                    <button type="submit" class="w-[14rem] bg-black text-white py-2 rounded-md hover:invert transition-all">
                                        Add to Cart
                                    </button>
                                </form>

                            </div>
                        </div>
                    </a>

                }
            </div>

            <!-- Pagination -->
            <div class="flex justify-center items-center mt-10 space-x-2 text-sm">
                <button class="px-3 py-1 border rounded hover:bg-gray-100">&lt;</button>
                <button class="px-3 py-1 border bg-black text-white rounded">1</button>
                <button class="px-3 py-1 border rounded hover:bg-gray-100">2</button>
                <button class="px-3 py-1 border rounded hover:bg-gray-100">3</button>
                <span class="px-2">...</span>
                <button class="px-3 py-1 border rounded hover:bg-gray-100">12</button>
                <button class="px-3 py-1 border rounded hover:bg-gray-100">&gt;</button>
            </div>
        </div>
    </div>
</div>



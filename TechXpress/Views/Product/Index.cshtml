@using TechXpress.Domain.ViewModels
@model ProductViewModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-3xl font-semibold text-white mb-4">Index</h1>

<p class="mb-4">
    <a asp-action="Create" class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">Create New</a>
</p>

<table class="min-w-full table-auto bg-gray-800 text-white rounded-lg shadow-md">
    <thead>
        <tr class="bg-gray-700">
            <th class="px-4 py-2">Name</th>
            <th class="px-4 py-2">Description</th>
            <th class="px-4 py-2">Price</th>
            <th class="px-4 py-2">Quantity</th>
            <th class="px-4 py-2">Image URL</th>
            <th class="px-4 py-2">Category</th>
            <th class="px-4 py-2">Brand</th>
            <th class="px-4 py-2">Actions</th>
        </tr>
    </thead>
    <tbody class="bg-gray-700">
        @foreach (var item in Model.Products)
        {
            <tr class="border-b border-gray-600">
                <td class="px-4 py-2">@item.Name</td>
                <td class="px-4 py-2">@item.Description</td>
                <td class="px-4 py-2">@item.Price</td>
                <td class="px-4 py-2">@item.Quantity</td>
                <td class="px-4 py-2">@item.ImageUrl</td>
                <td class="px-4 py-2">@item.Category.Name</td>
                <td class="px-4 py-2">@item.Brand.Name</td>
                <td class="px-4 py-2">
                    <a asp-action="Edit" asp-route-id="@item.Product_Id" class="text-blue-500 hover:text-blue-700">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Product_Id" class="text-blue-500 hover:text-blue-700">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Product_Id" class="text-red-500 hover:text-red-700">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

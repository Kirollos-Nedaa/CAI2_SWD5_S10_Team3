@model ProductDetailsDto
@{
    ViewData["Title"] = "Product Details";
}

<div class="max-w-4xl mx-auto py-10">
    <div class="flex flex-col md:flex-row gap-8">
        <!-- Product Image -->
        <img src="/images/products/@Model.ImageUrl" alt="@Model.Name" class="w-full md:w-1/2 rounded-lg shadow-md" />

        <!-- Product Details -->
        <div class="flex-1">
            <h2 class="text-3xl font-bold text-gray-900">@Model.Name</h2>
            <p class="mt-4 text-gray-700">@Model.Description</p>

            <!-- Price Section -->
            <p class="mt-2 text-xl font-semibold text-green-600">
                @if (Model.DiscountedPrice.HasValue)
                {
                    <span class="line-through text-gray-400 mr-2">@Model.Price.ToString("C")</span>
                    @Model.DiscountedPrice.Value.ToString("C")
                }
                else
                {
                    @Model.Price.ToString("C")
                }
            </p>

            <!-- Stock & Category Information -->
            <p class="mt-2 text-sm text-gray-500">In Stock: @Model.Quantity</p>
            <p class="mt-2 text-sm text-gray-500">Category: @Model.CategoryName</p>
            <p class="mt-2 text-sm text-gray-500">Brand: @Model.BrandName</p>

            <!-- Quantity Selector -->
            <div class="mt-4 flex items-center">
                <label for="quantity" class="mr-2 text-sm text-gray-700">Quantity:</label>
                <input type="number" id="quantity" name="quantity" min="1" max="@Model.Quantity" value="1" class="w-20 p-2 border border-gray-300 rounded-md text-center" />
            </div>

            <!-- Action Buttons -->
            <div class="mt-6 flex gap-4">
                <!-- Add to Cart Button -->
                <form asp-controller="Cart" asp-action="AddToCart" method="post">
                    <input type="hidden" name="productId" value="@Model.Product_Id">
                    <button type="submit" class="w-[14rem] bg-black text-white py-2 rounded-md hover:invert transition-all">
                        Add to Cart
                    </button>
                </form>

                <!-- Add to Wishlist Button -->
                <button class="w-full md:w-auto bg-gray-600 text-white py-2 px-4 rounded-md hover:bg-gray-700 transition-all">
                    Add to Wishlist
                </button>

                <!-- Buy Now Button -->
                <button class="w-full md:w-auto bg-green-600 text-white py-2 px-4 rounded-md hover:bg-green-700 transition-all">
                    Buy Now
                </button>
            </div>
        </div>
    </div>
</div>



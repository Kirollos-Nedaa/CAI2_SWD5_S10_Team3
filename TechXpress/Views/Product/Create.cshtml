@model TechXpress.Domain.Models.Product

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-3xl font-bold bg-gray-900 text-center text-white py-6">Create Product</h1>

<div class="flex justify-center min-h-screen bg-gray-900 text-white">
    <form asp-action="Create" class="bg-gray-800 p-8 rounded-lg shadow-lg w-full max-w-4xl">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label asp-for="Name" class="block mb-1">Name</label>
                <input asp-for="Name" class="w-full px-4 py-2 bg-gray-700 text-white rounded" />
                <span asp-validation-for="Name" class="text-red-400 text-sm"></span>
            </div>

            <div>
                <label asp-for="Description" class="block mb-1">Description</label>
                <input asp-for="Description" class="w-full px-4 py-2 bg-gray-700 text-white rounded" />
                <span asp-validation-for="Description" class="text-red-400 text-sm"></span>
            </div>

            <div>
                <label asp-for="Price" class="block mb-1">Price</label>
                <input asp-for="Price" class="w-full px-4 py-2 bg-gray-700 text-white rounded" />
                <span asp-validation-for="Price" class="text-red-400 text-sm"></span>
            </div>

            <div>
                <label asp-for="Quantity" class="block mb-1">Quantity</label>
                <input asp-for="Quantity" class="w-full px-4 py-2 bg-gray-700 text-white rounded" />
                <span asp-validation-for="Quantity" class="text-red-400 text-sm"></span>
            </div>

            <div>
                <label asp-for="ImageUrl" class="block mb-1">Image URL</label>
                <input asp-for="ImageUrl" class="w-full px-4 py-2 bg-gray-700 text-white rounded" />
                <span asp-validation-for="ImageUrl" class="text-red-400 text-sm"></span>
            </div>

            <div>
                <label asp-for="Category_Id" class="block mb-1">Category</label>
                <select asp-for="Category_Id" asp-items="ViewBag.Category_Id" class="w-full px-4 py-2 bg-gray-700 text-white rounded"></select>
            </div>

            <div>
                <label asp-for="Brand_Id" class="block mb-1">Brand</label>
                <select asp-for="Brand_Id" asp-items="ViewBag.Brand_Id" class="w-full px-4 py-2 bg-gray-700 text-white rounded"></select>
            </div>
        </div>

        <div class="mt-6 flex justify-center">
            <input type="submit" value="Create" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-6 rounded" />
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

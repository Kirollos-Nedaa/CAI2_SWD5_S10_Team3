@model TechXpress.Domain.ViewModels.ChangePasswordViewModel

@{
    ViewData["Title"] = "Change Password";
}

<div class="container mx-auto mt-10 px-4">
    <div class="bg-white shadow-lg rounded-lg p-6">
        <div class="flex items-center justify-between mb-6">
            <h3 class="text-xl font-semibold text-gray-800">Change Password</h3>
            <div class="space-x-4">
                <a asp-action="MyAccount" class="border hover:border-red-500 hover:text-red-500 hover:bg-white bg-red-500 text-white p-2 rounded-lg transition-all">Cancel</a>
            </div>
        </div>

        <form asp-action="ChangePassword" method="post">
            <div asp-validation-summary="All" class="text-danger mb-4"></div>

            <div class="space-y-6">
                <div class="flex items-center">
                    <label asp-for="OldPassword" class="font-medium text-gray-600 w-32">Old Password:</label>
                    <input asp-for="OldPassword" type="password" class="form-control bg-gray-100 border border-gray-300 rounded-md px-4 py-2 text-gray-800 w-full" />
                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                </div>

                <div class="flex items-center">
                    <label asp-for="NewPassword" class="font-medium text-gray-600 w-32">New Password:</label>
                    <input asp-for="NewPassword" type="password" class="form-control bg-gray-100 border border-gray-300 rounded-md px-4 py-2 text-gray-800 w-full" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="flex items-center">
                    <label asp-for="ConfirmPassword" class="font-medium text-gray-600 w-32">Confirm Password:</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control bg-gray-100 border border-gray-300 rounded-md px-4 py-2 text-gray-800 w-full" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <div class="mt-6 flex justify-end space-x-4">
                <button type="submit" class="border border-2 border-green-500 text-green-500 hover:bg-green-500 hover:text-white p-2 rounded-lg transition-all">Update Password</button>
            </div>
        </form>
    </div>
</div>

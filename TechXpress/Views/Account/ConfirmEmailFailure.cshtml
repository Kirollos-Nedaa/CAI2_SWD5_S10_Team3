@{
    ViewData["Title"] = "Email Confirmation Failed";
}

<div class="text-center mt-10">
    <h2 class="text-2xl font-bold text-red-600 mb-4">Email Confirmation Failed</h2>
    <p class="text-gray-700 mb-4">The confirmation link is invalid or has expired.</p>
    <p class="text-gray-600">Please request a new confirmation email or contact support.</p>
    <a asp-action="Login" asp-controller="Account" class="inline-block bg-gray-700 text-white px-6 py-2 rounded hover:bg-gray-800 mt-4">
        Back to Login
    </a>
</div>

@model TechXpress.Domain.ViewModels.VerifyCodeViewModel
@{
    ViewData["Title"] = "Email Verification";
}

<div class="max-w-md mx-auto mt-12 bg-white shadow-md rounded-lg p-8">
    <h2 class="text-2xl font-bold mb-4 text-gary-700 text-center">Verify Your Email</h2>
    <p class="text-gray-700 mb-6 text-center">
        We've sent a verification code to your email address. Please enter the code below to activate your account.
    </p>

    <form asp-action="VerifyCode" asp-controller="Account" method="post" class="space-y-6">
        <input type="hidden" asp-for="UserId" />

        <div>
            <label asp-for="Code" class="block text-sm font-medium text-gray-700">Verification Code</label>
            <input asp-for="Code" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-gary-500 focus:border-gary-500" />
            <span asp-validation-for="Code" class="text-red-500 text-sm"></span>
        </div>

        <button type="submit" class="w-full bg-black text-white py-2 px-4 rounded hover:bg-neutral-900 transition-all">
            Confirm Email
        </button>
    </form>

    <p class="mt-6 text-center text-gray-500 text-sm">
        Didn't receive the code? <a asp-action="ResendVerificationCode" asp-controller="Account" asp-route-userId="@Model.UserId" class="text-gray-600 hover:underline">Resend</a>
    </p>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

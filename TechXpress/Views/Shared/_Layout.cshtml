<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - TechXpress</title>
	<link href="~/tailwindcss/components.css" rel="stylesheet" />
	<link href="~/tailwindcss/tailwind.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TechXpress.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="bg-white shadow-sm">
        <nav class="max-w-7xl mx-auto px-6 lg:py-2 sm:py-0">
            <div class="flex justify-between items-center h-16">
                <!-- Logo/Brand -->
                <div class="flex items-center">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="text-2xl font-bold text-black">
                        TechXpress
                    </a>
                </div>

                <!-- Search Bar -->
                <div class="flex-1 max-w-sm mx-4">
                    <div class="relative">
                        <input type="text" placeholder="Search" class="w-full pl-4 pr-10 py-2 border-none bg-gray-50 rounded-md focus:outline-none focus:ring-2 focus:ring-black focus:border-black">
                        <div class="absolute inset-y-0 right-0 flex items-center pr-3">
                            <svg class="h-5 w-5 text-gray-400 hover:text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                            </svg>
                        </div>
                    </div>
                </div>

                <!-- Mobile Menu Button -->
                <div class="md:hidden">
                    <button type="button" id="mobile-menu-button" class="text-black hover:text-gray-500 focus:outline-none">
                        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                        </svg>
                    </button>
                </div>

                <!-- Desktop Navigation -->
                <div class="hidden md:flex items-center space-x-7">
                    <ul class="flex space-x-5">
                        <li>
                            <a class="nav-link text-gray-400 hover:text-black px-3 py-2 text-md font-medium"
                               href="/"
                               data-nav-id="home">
                                Home
                            </a>
                        </li>
                        <li>
                            <a class="nav-link text-gray-400 hover:text-black px-3 py-2 text-md font-medium"
                               href="/about"
                               data-nav-id="about">
                                About
                            </a>
                        </li>
                        <li>
                            <a class="nav-link text-gray-400 hover:text-black px-3 py-2 text-md font-medium"
                               href="/contact"
                               data-nav-id="contact">
                                Contact Us
                            </a>
                        </li>
                        <li>
                            <a class="nav-link text-gray-400 hover:text-black px-3 py-2 text-md font-medium"
                               href="/blog"
                               data-nav-id="blog">
                                Blog
                            </a>
                        </li>
                    </ul>

                    <!-- Icons -->
                    <div class="flex items-center space-x-4">
                        <a href="#" class="text-black">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
                            </svg>
                        </a>
                        <a href="#" class="text-black">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 3h1.386c.51 0 .955.343 1.087.835l.383 1.437M7.5 14.25a3 3 0 0 0-3 3h15.75m-12.75-3h11.218c1.121-2.3 2.1-4.684 2.924-7.138a60.114 60.114 0 0 0-16.536-1.84M7.5 14.25 5.106 5.272M6 20.25a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Zm12.75 0a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Z" />
                            </svg>
                        </a>
                        <a href="#" class="text-black">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
                            </svg>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Mobile Menu -->
            <div id="mobile-menu" class="hidden md:hidden lg:py-2 sm:py-0">
                <div class="text-center space-y-1 px-2">
                    <a href="/" class="block px-3 py-2 text-base font-medium text-gray-400 hover:text-black hover:bg-gray-50">Home</a>
                    <a href="/about" class="block px-3 py-2 text-base font-medium text-gray-400 hover:text-black hover:bg-gray-50">About</a>
                    <a href="/contact" class="block px-3 py-2 text-base font-medium text-gray-400 hover:text-black hover:bg-gray-50">Contact Us</a>
                    <a href="/blog" class="block px-3 py-2 text-base font-medium text-gray-400 hover:text-black hover:bg-gray-50">Blog</a>
                </div>
                <div class="flex items-center justify-around px-2 py-4">
                    <a href="#" class="text-black px-3 py-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
                        </svg>
                    </a>
                    <a href="#" class="text-black px-3 py-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 3h1.386c.51 0 .955.343 1.087.835l.383 1.437M7.5 14.25a3 3 0 0 0-3 3h15.75m-12.75-3h11.218c1.121-2.3 2.1-4.684 2.924-7.138a60.114 60.114 0 0 0-16.536-1.84M7.5 14.25 5.106 5.272M6 20.25a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Zm12.75 0a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Z" />
                        </svg>
                    </a>
                    <a href="#" class="text-black px-3 py-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
                        </svg>
                    </a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container">
            &copy; 2025 - TechXpress - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
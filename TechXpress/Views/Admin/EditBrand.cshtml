@model EditBrandDto
@{
    ViewData["Title"] = "Edit Brand";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <h1 class="mt-4">Edit Brand</h1>
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="EditBrand" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Brand_Id" />
                <input type="hidden" asp-for="ImgUrl" />

                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Current Image</label>
                    @if (!string.IsNullOrEmpty(Model.ImgUrl))
                    {
                        <div class="mb-2">
                            <img src="/images/brands/@Model.ImgUrl" class="img-thumbnail" style="max-height: 200px;" />
                        </div>
                    }
                    <label asp-for="ImageFile">New Image (Optional)</label>
                    <input asp-for="ImageFile" class="form-control" accept="image/*" />
                    <small class="text-muted">Leave empty to keep current image</small>
                </div>

                <button type="submit" class="btn btn-primary">Save Changes</button>
            </form>
        </div>
    </div>
</div>
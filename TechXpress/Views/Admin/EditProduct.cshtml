@model EditProductDto
@{
    ViewData["Title"] = "Edit Product";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <h1 class="mt-4">Edit Product</h1>

    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="EditProduct" method="post" enctype="multipart/form-data">

                <input type="hidden" asp-for="Product_Id" />

                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Price"></label>
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Quantity"></label>
                            <input asp-for="Quantity" class="form-control" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label>Current Image</label>
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <div class="mb-2">
                            <img src="/images/products/@Model.ImageUrl" class="img-thumbnail" style="max-height: 200px;" />
                            <input type="hidden" asp-for="ImageUrl" />
                        </div>
                    }
                    <label asp-for="ImageFile">Upload New Image</label>
                    <input asp-for="ImageFile" class="form-control" accept="image/*" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Category_Id">Category</label>
                            <select asp-for="Category_Id" asp-items="ViewBag.Categories" class="form-control">
                                <option value="">Select Category</option>
                            </select>
                            <span asp-validation-for="Category_Id" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Brand_Id">Brand</label>
                            <select asp-for="Brand_Id" asp-items="ViewBag.Brands" class="form-control">
                                <option value="">Select Brand</option>
                            </select>
                            <span asp-validation-for="Brand_Id" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary mt-3">Update Product</button>
                <a asp-action="Products" class="btn btn-secondary mt-3">Cancel</a>
            </form>
        </div>
    </div>
</div>

